{
    "name": "@ekino/logger",
    "description": "A Lightweight logger that combines debug namespacing capabilities with winston levels and multi-output",
    "homepage": "https://github.com/ekino/node-logger",
    "license": "MIT",
    "version": "2.1.1",
    "type": "module",
    "files": [
        "/lib"
    ],
    "main": "lib/esm/index.js",
    "types": "lib/esm/index.d.ts",
    "exports": {
        ".": {
            "require": {
                "default": "./lib/cjs/index.js",
                "types": "./lib/cjs/index.d.ts"
            },
            "import": {
                "default": "./lib/esm/index.js",
                "types": "./lib/esm/index.d.ts"
            }
        }
    },
    "tags": [
        "logger",
        "lightweight",
        "namespaces"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ekino/node-logger.git"
    },
    "maintainers": [
        {
            "name": "Ekino"
        }
    ],
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "colors": "1.x",
        "prettyoutput": "1.x",
        "uuid": "8.x"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "17.x",
        "@types/node": "18.x",
        "@types/uuid": "9.x",
        "@typescript-eslint/eslint-plugin": "6.x",
        "@typescript-eslint/parser": "6.x",
        "ava": "5.x",
        "c8": "8.x",
        "commitlint": "17.x",
        "conventional-changelog": "5.x",
        "conventional-changelog-cli": "4.x",
        "coveralls": "3.x",
        "eslint": "8.x",
        "husky": "8.x",
        "prettier": "3.x",
        "sinon": "16.x",
        "ts-node": "10.x",
        "typescript": "5.x",
        "zx": "7.x"
    },
    "scripts": {
        "fmt": "prettier --color --write \"{*,src/**/*,test/**/*}.{js,ts}\" --cache",
        "check-fmt": "prettier --list-different \"{*,test/**/*}.{js,ts}\"",
        "build": "node scripts/build.js",
        "prepublishOnly": "rm -rf lib && yarn build",
        "test": "ava",
        "test-cover": "c8 ava",
        "coverage": "yarn test-cover | coveralls",
        "version": "echo ${npm_package_version}",
        "lint-fix": "eslint \"{src,test}/**/*.{js,ts}\" --fix",
        "lint": "eslint \"{src,test}/**/*.{js,ts}\"",
        "examples": "node examples/index.js"
    }
}